<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    >

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="По какому номеру будем звонить?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textViewDialogPhone1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Text2"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/imageViewDialogPhone1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDialogPhone1"
        app:layout_constraintStart_toEndOf="@id/imageViewDialogPhone1"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/textViewDialogPhone2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="ffffffff"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"

        app:layout_constraintTop_toTopOf="@id/imageViewDialogPhone2"
        app:layout_constraintBottom_toBottomOf="@id/imageViewDialogPhone2"
        app:layout_constraintStart_toEndOf="@id/imageViewDialogPhone2"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <ImageView
        android:id="@+id/imageViewDialogPhone1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintTop_toBottomOf="@id/textViewDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        />

    <ImageView
        android:id="@+id/imageViewDialogPhone2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintTop_toBottomOf="@id/imageViewDialogPhone1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewDialogPhone2"
        app:layout_constraintStart_toStartOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>

